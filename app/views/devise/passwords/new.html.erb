<div class="container text-center">
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>
</div>

<div class="row form-group">
  <div class="container text-center">
    <legend class="buffer-top">Забыли пароль?</legend>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
      <% devise_error_messages! %>

      <fieldset class="input-lg">
        <span class="glyphicon glyphicon-envelope mr"></span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Введите email...' %>
      </fieldset>

      <div class="actions">
        <button class="btn btn-default">
          Восстановить!
          <% f.submit %>
        </button>
      </div>

    <% end %>
    <div class="row buffer-top">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
