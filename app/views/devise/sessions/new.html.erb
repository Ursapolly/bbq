<div class="container text-center">
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>
</div>

<div class="row form-group">
  <div class="container text-center">
    <legend class="buffer-top">Вход в аккаунт</legend>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% devise_error_messages! %>
      <fieldset class="input-lg">
        <span class="glyphicon glyphicon-envelope mr"></span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Введите email...' %>
      </fieldset>

      <div class="input-lg">
        <span class="glyphicon glyphicon-lock  mr"></span>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Введите пароль...' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <button class="btn btn-danger buffer-top">
          Войти
          <% f.submit %>
        </button>
      </div>

    <% end %>

    <div class="row buffer-top">
      Нет аккаунта? –
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

