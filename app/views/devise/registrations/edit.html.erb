<div class="container text-center">
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>
</div>

<div class="row form-group">
  <div class="container text-center">
    <legend class="buffer-top">Сменить пароль</legend>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
      <% devise_error_messages! %>

      <fieldset class="input-lg">
        <span class="glyphicon glyphicon-envelope mr"></span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Введите email...' %>
      </fieldset>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <fieldset class="input-lg">
        <span class="glyphicon glyphicon-lock mr"></span>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Введите новый пароль...' %>
      </fieldset>

      <fieldset class="input-lg">
        <span class="glyphicon glyphicon-repeat mr"></span>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Повторите пароль...' %>
      </fieldset>

      <fieldset class="input-lg">
        <span class="glyphicon glyphicon-lock mr"></span>
        <%= f.password_field :current_password, autocomplete: "off", placeholder: 'Старый пароль...' %>
      </fieldset>

      <div class="actions">
        <button class="btn btn-danger buffer-top">
          Обновить
          <% f.submit %>
        </button>
      </div>

    <% end %>
    <div class="row buffer-top">
      <%= render "devise/shared/links" %>
      <%= link_to "Удалить аккаунт", registration_path(resource_name), data: {confirm: "Are you sure?"}, method: :delete %>
      <br>
      <%= link_to "Назад", :back %>
    </div>
  </div>
</div>
