<div class="container text-center">
  <legend class="buffer-top">Регистрация пользователя</legend>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <div class="field input-lg input-prepend">
        <% f.label :email %>
        <i class="fas fa-envelope"></i>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Введите email...' %>
      </div>
    </div>

    <div class="form-group">
      <div class="field input-lg">
        <% f.label :password %>
        <i class="fas fa-key"></i>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Придумайте пароль...' %>
      </div>
    </div>
    <div class="form-group">
      <div class="field input-lg">
        <% f.label :password_confirmation %>
        <i class="fas fa-redo-alt"></i>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Повторите пароль...' %>
      </div>
    </div>

    <div class="actions">
      <button class="btn btn-default">
        Я к вам!
        <% f.submit "Sign up" %>
      </button>
    </div>
  <% end %>
  <div class="row buffer-top">
    Уже с нами?
    <%= render "devise/shared/links" %>
  </div>
</div>

